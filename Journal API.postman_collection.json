{
	"info": {
		"_postman_id": "random-uuid",
		"name": "Journal API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Test API",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/test",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"test"
					]
				}
			}
		},
		{
			"name": "Create Journal",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"My Journal\",\n    \"description\": \"A journal for my daily thoughts\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/api/journal",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"journal"
					]
				}
			}
		},
		{
			"name": "Create Journal Entry",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"My First Entry\",\n    \"content\": \"This is my first journal entry\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/api/journal/{{journalId}}/entry",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"journal",
						"{{journalId}}",
						"entry"
					]
				}
			}
		},
		{
			"name": "Get Journal Entries By Date Range",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/journal/{{journalId}}/entry?dateFrom={{startDate}}&dateTo={{endDate}}",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"journal",
						"{{journalId}}",
						"entry"
					],
					"query": [
						{
							"key": "dateFrom",
							"value": "{{startDate}}"
						},
						{
							"key": "dateTo",
							"value": "{{endDate}}"
						}
					]
				}
			}
		},
		{
			"name": "Get All Journals",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/journal",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"journal"
					]
				}
			}
		},
		{
			"name": "Delete Journal",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/journal/{{journalId}}",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"journal",
						"{{journalId}}"
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "journalId",
			"value": "your-journal-id-here"
		},
		{
			"key": "startDate",
			"value": "2023-07-25T00:00:00Z"
		},
		{
			"key": "endDate",
			"value": "2023-07-25T23:59:59Z"
		}
	]
}

